{
  "files": [],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "types": ["vite/client", "node"],
    "jsx": "preserve", // Vue JSX 支持
    "jsxImportSource": "vue",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "typings/**/*.d.ts"]
}
