{
  "import": ["@cspell/dict-typescript/cspell-ext.json"],
  "caseSensitive": false,
  "words": ["mi", "pnpm", "vite", "monorepo", "eslint", "prettier", "commitlint", "tsx", "tsconfig", "unocss"],

  "ignorePaths": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/public/**",
    "**/static/**",
    "**/out/**",
    "**/vendor/**",
    "**/tmp/**",
    "**/*.d.ts",
    "**/package.json",
    "**/*.md",
    "**/stats.html",
    "eslint.config.ts",
    ".gitignore",
    ".prettierignore",
    "cspell.json",
    "prettier.config.ts",
    "commitlint.config.ts",
    ".cspell",
    ".lintstagedrc.json",
    ".npmrc",
    "pnpm-workspace.yaml",
    "pnpm-lock.yaml",
    "package-lock.json",
    "yarn.lock",
    "*.log",
    "*.svg",
    "*.png",
    "*.jpg"
  ],

  "ignoreRegExpList": ["/http(s)?:\\/\\//", "/#[A-Za-z0-9]{6}/"],

  "allowCompoundWords": true,

  "dictionaries": ["custom-dictionary"],
  "dictionaryDefinitions": [
    {
      "name": "custom-dictionary",
      "path": "./.cspell/custom-dictionary.txt",
      "addWords": true
    }
  ]
}
